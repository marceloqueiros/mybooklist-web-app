@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@HttpContext.Current.User.Identity.Name<span class="caret"></span></a>
        <ul id="login-dp" class="dropdown-menu">
            <li><a href="~/Registado/Perfil"><i class="glyphicon glyphicon-user"></i> My Profile</a></li>
            <li><a href="~/Account/Logout"><i class="glyphicon glyphicon-lock"></i> Logout</a></li>
        </ul>
    </li>
}
else
    if (Session["admin"] != null)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Session["admin"]</a>
    </li>
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
        <ul id="login-dp" class="dropdown-menu">
            <li>
                <div class="row">
                    <div class="col-sm-12">
                        <form class="form" role="form" method="post" action="~/Account/Login" accept-charset="UTF-8" id="login-nav">
                            <div class="form-group">
                                <input type="text" class="form-control" name="Username" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="Pass" placeholder="Password" required>
                                <div class="help-block text-right"><a href="~/Account/ForgotPass/">Esqueceu a Password?</a></div>
                            </div>
                            <div class="form-group">
                                <button type="submit" value="create" class="btn btn-primary btn-block">Entrar</button>
                            </div>
                        </form>
                    </div>
                    <div class="bottom text-center">
                        <button type="button" onclick="location.href='@Url.Action("Registar", "Account")'" class="btn btn-info btn-block">Registar</button>
                    </div>
                </div>
            </li>
        </ul>
    </li>
}