<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin-top: 30px;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <h2>
                    Esqueceu a password?
                </h2>
                <hr />
                <div>
                    <br />
                    <p>Insira o Username e Email da conta.</p>
                    <p>Será enviado um email com instruções para a recuperação da password.</p>
                    <br />
                </div>
                @using (Html.BeginForm("ForgotPass", "Account"))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-8">
                                <input placeholder="Username" type="text" class="form-control" name="Username" required>
                                @Html.ValidationMessage("Username", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <input placeholder="Email" type="text" class="form-control" name="Email" required>
                                @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 control-label"></label>
                            <div class="col-md-8">
                                <input class="btn btn-primary" value="Enviar Email" type="submit">
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
        </div>
    </body>
</html>
